---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: kube-vip
  namespace: kube-system
spec:
  selector:
    matchLabels:
      name: kube-vip
  template:
    metadata:
      labels:
        name: kube-vip
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node-role.kubernetes.io/control-plane
                operator: Exists
      containers:
      - args:
        - manager
        env:
        - name: vip_arp
          value: "false"
        - name: bgp_enable
          value: "true"
        - name: port
          value: "{{ k3s_api_port }}"
        - name: vip_nodename
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
        - name: vip_subnet
          value: "32"
        - name: cp_enable
          value: "true"
        - name: dns_mode
          value: first
        - name: cp_namespace
          value: kube-system
        - name: vip_ddns
          value: "false"
        - name: svc_enable
          value: "false"
        - name: address
          value: {{ k3s_api_vip }}
        - name: bgp_peerpass
        - name: bgp_peeraddress
          value: "{{ k3s_kubevipbgp_peeraddress }}"
        - name: bgp_as
          value: "{{ k3s_kubevipbgp_as }}"
        - name: bgp_peeras
          value: "{{ k3s_kubevipbgp_peeras }}"
        - name: bgp_routerid
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        - name: prometheus_server
          value: :2112
        image: ghcr.io/kube-vip/kube-vip:{{ k3s_kubevip_version }}
        imagePullPolicy: IfNotPresent
        name: kube-vip
        resources: {}
        securityContext:
          capabilities:
            add:
            - NET_ADMIN
            - NET_RAW
            drop:
            - ALL
      hostNetwork: true
      serviceAccountName: kube-vip
      tolerations:
      - effect: NoSchedule
        operator: Exists
      - effect: NoExecute
        operator: Exists
  updateStrategy: {}
status:
  currentNumberScheduled: 0
  desiredNumberScheduled: 0
  numberMisscheduled: 0
  numberReady: 0
