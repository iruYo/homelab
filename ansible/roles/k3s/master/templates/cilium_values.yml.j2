autoDirectNodeRoutes: true

bpf:
  datapathMode: netkit
  masquerade: true

endpointRoutes:
  enabled: true

hubble:
  enabled: false

ipam:
  mode: kubernetes
  operator:
    clusterPoolIPv4PodCIDRList: "10.42.0.0/16" # K3s default range

ipv4NativeRoutingCIDR: "10.42.0.0/16"

k8sServiceHost: localhost
k8sServicePort: {{ k3s_api_port }}

kubeProxyReplacement: true

loadBalancer:
  algorithm: maglev
  mode: dsr

localRedirectPolicies:
  enabled: true

pmtuDiscovery:
  enabled: true

routingMode: native